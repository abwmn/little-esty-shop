<h1>Admin Dashboard</h1>
<div id='links'>
  <%= link_to 'Admin Merchants', '/admin/merchants' %>
  <%= link_to 'Admin Invoices', '/admin/invoices' %>
</div>

<section id="top-customers">
  <h2>Top Customers by Successful Transactions</h2>
  <ul>
    <% @top_customers.each do |customer| %>
      <li>
        <%= customer.full_name %> - <%= customer.successful_transaction_count %>
      </li>
    <% end %>
  </ul>
</section>

<section id="incomplete-invoices">
  <h2>Incomplete Invoices</h2>
  <ul>
    <% @incomplete_invoices.each do |invoice| %>
      <li>
        <%= link_to "Invoice: #{invoice.id}", "/admin/invoices/#{invoice.id}" %>
      </li>
    <% end %>
  </ul>
</section>