<h1>Little Esty Shop</h1>

<h2><%= @merchant.name %></h2>

<%= form_with model: [@merchant, @item], local: true do |f| %>
  <p><%= f.label :name %></P>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :description %></p>
  <p><%= f.text_field :description %></p>

  <p><%= f.label :unit_price, 'Unit Price' %></p>
  <p><%= f.number_field :unit_price %></p>

<p><%= f.submit "Submit" %></p>
<% end %>
