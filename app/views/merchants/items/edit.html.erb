<h1>Little Esty Shop</h1>

<h2><%= @merchant.name %></h2>

<%= form_with url: merchant_item_path(@merchant, @item), method: :patch, local: true do |f| %>
  <p><%= f.label :name %></P>
  <p><%= f.text_field :name, value: @item.name %></p>

  <p><%= f.label :description %></p>
  <p><%= f.text_field :description, value: @item.description %></p>

  <p><%= f.label :unit_price %></p>
  <p><%= f.number_field :unit_price, value: @item.unit_price %>

<% end %>
